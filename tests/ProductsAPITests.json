{
  "info": {
    "_postman_id": "65a22697-536f-455c-9cd3-458c7f0857ae",
    "name": "Products API Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "39230841"
  },
  "item": [
    {
      "name": "Get Each Product",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "// Kiểm tra status code",
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "// Parse JSON",
              "var jsonData = {};",
              "try {",
              "    jsonData = pm.response.json();",
              "} catch (e) {",
              "    pm.test(\"Response is valid JSON\", function () {",
              "        throw new Error(\"Response is not JSON\");",
              "    });",
              "}",
              "",
              "// Check có field id",
              "pm.test(\"Response has id field\", function () {",
              "    pm.expect(jsonData).to.have.property('id');",
              "});",
              "",
              "// Check có field name",
              "pm.test(\"Response has name field\", function () {",
              "    pm.expect(jsonData).to.have.property('name');",
              "});",
              "",
              "// Check có field price (nếu API có)",
              "pm.test(\"Response has price field\", function () {",
              "    pm.expect(jsonData).to.have.property('price');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8091/products/{{id}}",
          "host": ["http://localhost:8091"],
          "path": ["products", "{{id}}"]
        }
      },
      "response": []
    }
  ]
}
