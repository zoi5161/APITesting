{
  "info": {
    "name": "Brands API Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Each Brands",
      "request": {
        "method": "GET",
        "url": "http://localhost:8091/brands/1"
      },
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "let id = pm.iterationData.get('id');",
              "if (id) {",
              "   pm.request.url = 'http://localhost:8091/brands/' + id;",
              "   console.log('✅ ID từ CSV:', id);",
              "} else {",
              "   console.log('❌ Không đọc được id từ CSV');",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ]
}
