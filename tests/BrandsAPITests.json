{
  "info": {
    "name": "Brands API Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Each Brands",
      "request": {
        "method": "GET",
        "url": "http://localhost:8091/brands/0"
      },
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "let id = pm.iterationData.get('id');",
              "pm.request.url = 'http://localhost:8091/brands/' + id;"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ]
}
